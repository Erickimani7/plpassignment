}

/* Media Queries for Responsive Design */

/* Mobile (Up to 600px) */
@media (max-width: 600px) {
    .navbar ul {
        flex-direction: column;
        align-items: center;
    }

    .container {
        flex-direction: column;
    }

    .main-content, .sidebar {
        margin: 0;
        flex: 1;
        width: 100%;
    }

    footer {
        font-size: 0.8rem;
    }
}

/* Tablet (601px - 1024px) */
@media (min-width: 601px) and (max-width: 1024px) {
    .container {
        flex-direction: row;
    }

    .main-content {
        flex: 2;
    }

    .sidebar {
        flex: 1;
    }
}

/* Desktop (1025px and above) */
@media (min-width: 1025px) {
    .container {
        flex-direction: row;
    }

    .main-content {
        flex: 3;
    }

    .sidebar {
        flex: 1;
    }
}
